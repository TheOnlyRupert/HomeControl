<Page
    x:Class="HomeControl.Source.Modules.Finances.Finances"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d">
    <Grid
        Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*"/>
            <ColumnDefinition
                Width="*"/>
            <ColumnDefinition
                Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="*"/>
        </Grid.RowDefinitions>

        <ProgressBar
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Value="{Binding ProgressTotal}"
            IsIndeterminate="False"
            Foreground="{Binding ProgressTotalColor}"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="{Binding ProgressTotalText}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"/>
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Total Remaining"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="2"
            Grid.Column="0"
            Value="{Binding ProgressBlock1}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Text="{Binding ProgressBlockText1}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Text="{Binding TextBlock1}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="2"
            Grid.Column="1"
            Value="{Binding ProgressBlock2}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding ProgressBlockText2}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding TextBlock2}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="2"
            Grid.Column="2"
            Value="{Binding ProgressBlock3}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Text="{Binding ProgressBlockText3}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Text="{Binding TextBlock3}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="4"
            Grid.Column="0"
            Value="{Binding ProgressBlock4}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Text="{Binding ProgressBlockText4}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Text="{Binding TextBlock4}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="4"
            Grid.Column="1"
            Value="{Binding ProgressBlock5}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Text="{Binding ProgressBlockText5}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Text="{Binding TextBlock5}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="4"
            Grid.Column="2"
            Value="{Binding ProgressBlock6}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Text="{Binding ProgressBlockText6}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="5"
            Grid.Column="2"
            Text="{Binding TextBlock6}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="6"
            Grid.Column="0"
            Value="{Binding ProgressBlock7}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Text="{Binding ProgressBlockText7}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Text="{Binding TextBlock7}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="6"
            Grid.Column="1"
            Value="{Binding ProgressBlock8}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Text="{Binding ProgressBlockText8}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="7"
            Grid.Column="1"
            Text="{Binding TextBlock8}"
            Foreground="White"
            HorizontalAlignment="Center"/>

        <ProgressBar
            Grid.Row="6"
            Grid.Column="2"
            Value="{Binding ProgressBlock9}"
            IsIndeterminate="False"
            Foreground="CornflowerBlue"
            Background="Transparent"
            BorderBrush="DarkSlateGray"
            BorderThickness="1"/>
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Text="{Binding ProgressBlockText9}"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock
            Grid.Row="7"
            Grid.Column="2"
            Text="{Binding TextBlock9}"
            Foreground="White"
            HorizontalAlignment="Center"/>
    </Grid>
</Page>