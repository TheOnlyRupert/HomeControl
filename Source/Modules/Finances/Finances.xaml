<Page x:Class="HomeControl.Source.Modules.Finances.Finances" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="1" Margin="4">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="68"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="../../../Resources/Images/icons/money.png" VerticalAlignment="Top" HorizontalAlignment="Left" Width="24" Height="24"/>

                <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                    <TextBlock Text="Income" FontSize="24"/>
                    <TextBlock Text="{Binding CashIncomeText}" FontSize="24"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Expenses" FontSize="24"/>
                    <TextBlock Text="{Binding CashExpenseText}" FontSize="24"/>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="Available" FontSize="24"/>
                    <TextBlock Text="{Binding CashAvailableText}" FontSize="24" Foreground="{Binding CashAvailableTextColor}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Grid.Row="0" HorizontalAlignment="Right" Width="100">
                    <Button Content="ADD" Command="{Binding ButtonCommand}" CommandParameter="add" FontSize="16" Height="32"/>
                    <Button Content="EDIT" Command="{Binding ButtonCommand}" CommandParameter="edit" FontSize="16" Height="32"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">

                <ListView Grid.Row="0" ItemsSource="{Binding FinanceList}">
                    <ListView.View>
                        <GridView AllowsColumnReorder="false">
                            <GridViewColumn DisplayMemberBinding="{Binding Path=AddSub}" Header="+/-" Width="24"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Date}" Header="Date" Width="96"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Item}" Header="Item" Width="96"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Cost}" Header="Cost" Width="24"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Category}" Header="Category" Width="96"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Person}" Header="Person" Width="96"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Border>
</Page>