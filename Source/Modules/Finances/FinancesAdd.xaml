<Window x:Class="HomeControl.Source.Modules.Finances.FinancesAdd" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Title="Add Finance" Height="600" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="styleCalendar" TargetType="Calendar"/>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="{Binding SwitchModeButtonText}" Command="{Binding ButtonCommand}" CommandParameter="switchMode" FontSize="24" Margin="16"
                Background="{Binding SwitchModeButtonColor}"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Description" FontSize="24"/>
            <TextBox Text="{Binding DescriptionText}" FontSize="24" MaxLength="24"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Amount ($)" FontSize="24"/>
            <TextBox Text="{Binding AmountText}" MaxLength="12" FontSize="24"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Category" FontSize="24"/>
            <ComboBox FontSize="24" ItemsSource="{Binding CategoryList}" SelectedItem="{Binding CategorySelected}"/>
        </StackPanel>

        <Viewbox Grid.Row="4" Height="64">
            <DatePicker CalendarStyle="{StaticResource styleCalendar}" Text="{Binding DateText}"/>
        </Viewbox>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Robert" Command="{Binding ButtonCommand}" CommandParameter="robert"/>
            <Button Grid.Column="1" Content="Brittany" Command="{Binding ButtonCommand}" CommandParameter="brittany"/>
            <Button Grid.Column="2" Content="Children" Command="{Binding ButtonCommand}" CommandParameter="children"/>
            <Button Grid.Column="3" Content="Home" Command="{Binding ButtonCommand}" CommandParameter="home"/>
            <Button Grid.Column="4" Content="Other" Command="{Binding ButtonCommand}" CommandParameter="other"/>
        </Grid>

        <StackPanel Grid.Row="6" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Save" FontSize="24" Margin="10" Width="150" Command="{Binding ButtonCommand}" CommandParameter="save"/>
            <Button Content="Exit" FontSize="24" Margin="10" Width="150" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>