                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <Image
                Source="{Binding LockedImage}"
                Height="96"
                Width="96" />
        </Button>
    </Grid>
</Page>