<Page x:Class="HomeControl.Source.Modules.Behavior.Behavior" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="1" Margin="4 0 4 4">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Foreground="White" Text="Behavior Tracker" FontSize="18" HorizontalAlignment="Center"/>
            <Image Grid.Column="0" Grid.Row="0" Source="../../Resources/Images/icons/behavior.png" Height="24" HorizontalAlignment="Left"/>

            <Button Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Command="{Binding ButtonCommand}" CommandParameter="user1">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding ImageUser1}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Text="{Binding User1Name}" FontSize="18" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding User1Star1}" Height="48"/>
                        <Image Grid.Column="1" Source="{Binding User1Star2}" Height="48"/>
                        <Image Grid.Column="2" Source="{Binding User1Star3}" Height="48"/>
                        <Image Grid.Column="3" Source="{Binding User1Star4}" Height="48"/>
                        <Image Grid.Column="4" Source="{Binding User1Star5}" Height="48"/>
                    </Grid>

                    <ProgressBar Grid.Row="2" Height="32" FontSize="16" HorizontalAlignment="Stretch" Value="{Binding ProgressBarUser1Value}" IsIndeterminate="False"
                                 Foreground="CornflowerBlue" Background="Transparent" BorderThickness="1" HorizontalContentAlignment="Stretch" Maximum="5"/>

                    <TextBlock Grid.Row="2" Text="{Binding ProgressBarUser1ValueText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"
                               Foreground="GreenYellow" Focusable="False"/>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding User1Strike1}"/>
                        <Image Grid.Column="1" Source="{Binding User1Strike2}"/>
                        <Image Grid.Column="2" Source="{Binding User1Strike3}"/>
                    </Grid>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Command="{Binding ButtonCommand}" CommandParameter="user2">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding ImageUser2}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Text="{Binding User2Name}" FontSize="18" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding User2Star1}" Height="48"/>
                        <Image Grid.Column="1" Source="{Binding User2Star2}" Height="48"/>
                        <Image Grid.Column="2" Source="{Binding User2Star3}" Height="48"/>
                        <Image Grid.Column="3" Source="{Binding User2Star4}" Height="48"/>
                        <Image Grid.Column="4" Source="{Binding User2Star5}" Height="48"/>
                    </Grid>

                    <ProgressBar Grid.Row="2" Height="32" FontSize="16" HorizontalAlignment="Stretch" Value="{Binding ProgressBarUser2Value}" IsIndeterminate="False"
                                 Foreground="CornflowerBlue" Background="Transparent" BorderThickness="1" HorizontalContentAlignment="Stretch" Maximum="5"/>

                    <TextBlock Grid.Row="2" Text="{Binding ProgressBarUser2ValueText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"
                               Foreground="GreenYellow" Focusable="False"/>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding User2Strike1}"/>
                        <Image Grid.Column="1" Source="{Binding User2Strike2}"/>
                        <Image Grid.Column="2" Source="{Binding User2Strike3}"/>
                    </Grid>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Command="{Binding ButtonCommand}"
                    CommandParameter="child1">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding ImageChild1}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Text="{Binding Child1Name}" FontSize="18" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Child1Star1}" Height="48"/>
                        <Image Grid.Column="1" Source="{Binding Child1Star2}" Height="48"/>
                        <Image Grid.Column="2" Source="{Binding Child1Star3}" Height="48"/>
                        <Image Grid.Column="3" Source="{Binding Child1Star4}" Height="48"/>
                        <Image Grid.Column="4" Source="{Binding Child1Star5}" Height="48"/>
                    </Grid>

                    <ProgressBar Grid.Row="2" Height="32" FontSize="16" HorizontalAlignment="Stretch" Value="{Binding ProgressBarChild1Value}" IsIndeterminate="False"
                                 Foreground="CornflowerBlue" Background="Transparent" BorderThickness="1" HorizontalContentAlignment="Stretch" Maximum="5"/>

                    <TextBlock Grid.Row="2" Text="{Binding ProgressBarChild1ValueText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"
                               Foreground="GreenYellow" Focusable="False"/>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Child1Strike1}"/>
                        <Image Grid.Column="1" Source="{Binding Child1Strike2}"/>
                        <Image Grid.Column="2" Source="{Binding Child1Strike3}"/>
                    </Grid>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Command="{Binding ButtonCommand}"
                    CommandParameter="child2">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding ImageChild2}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Text="{Binding Child2Name}" FontSize="18" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Child2Star1}" Height="48"/>
                        <Image Grid.Column="1" Source="{Binding Child2Star2}" Height="48"/>
                        <Image Grid.Column="2" Source="{Binding Child2Star3}" Height="48"/>
                        <Image Grid.Column="3" Source="{Binding Child2Star4}" Height="48"/>
                        <Image Grid.Column="4" Source="{Binding Child2Star5}" Height="48"/>
                    </Grid>

                    <ProgressBar Grid.Row="2" Height="32" FontSize="16" HorizontalAlignment="Stretch" Value="{Binding ProgressBarChild2Value}" IsIndeterminate="False"
                                 Foreground="CornflowerBlue" Background="Transparent" BorderThickness="1" HorizontalContentAlignment="Stretch" Maximum="5"/>

                    <TextBlock Grid.Row="2" Text="{Binding ProgressBarChild2ValueText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"
                               Foreground="GreenYellow" Focusable="False"/>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Child2Strike1}"/>
                        <Image Grid.Column="1" Source="{Binding Child2Strike2}"/>
                        <Image Grid.Column="2" Source="{Binding Child2Strike3}"/>
                    </Grid>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="4" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Command="{Binding ButtonCommand}"
                    CommandParameter="child3">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding ImageChild3}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Text="{Binding Child3Name}" FontSize="18" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Child3Star1}" Height="48"/>
                        <Image Grid.Column="1" Source="{Binding Child3Star2}" Height="48"/>
                        <Image Grid.Column="2" Source="{Binding Child3Star3}" Height="48"/>
                        <Image Grid.Column="3" Source="{Binding Child3Star4}" Height="48"/>
                        <Image Grid.Column="4" Source="{Binding Child3Star5}" Height="48"/>
                    </Grid>

                    <ProgressBar Grid.Row="2" Height="32" FontSize="16" HorizontalAlignment="Stretch" Value="{Binding ProgressBarChild3Value}" IsIndeterminate="False"
                                 Foreground="CornflowerBlue" Background="Transparent" BorderThickness="1" HorizontalContentAlignment="Stretch" Maximum="5"/>

                    <TextBlock Grid.Row="2" Text="{Binding ProgressBarChild3ValueText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"
                               Foreground="GreenYellow" Focusable="False"/>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding Child3Strike1}"/>
                        <Image Grid.Column="1" Source="{Binding Child3Strike2}"/>
                        <Image Grid.Column="2" Source="{Binding Child3Strike3}"/>
                    </Grid>
                </Grid>
            </Button>
        </Grid>
    </Border>
</Page>