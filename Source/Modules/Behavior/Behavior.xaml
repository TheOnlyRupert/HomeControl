            CommandParameter="user5"
            Margin="2 0 2 0"
            Background="{Binding User5BackgroundColor}"
            Visibility="{Binding User5Visibility}">
            <Button.Style>
                <Style
                    TargetType="{x:Type Button}">
                    <Setter
                        Property="Background"
                        Value="Transparent"/>
                    <Setter
                        Property="Foreground"
                        Value="White"/>
                    <Setter
                        Property="Template">
                        <Setter.Value>
                            <ControlTemplate
                                TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="DarkSlateGray"
                                    BorderThickness="1">
                                    <ContentPresenter
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*"/>
                    <RowDefinition
                        Height="8"/>
                    <RowDefinition
                        Height="Auto"/>
                    <RowDefinition
                        Height="Auto"/>
                    <RowDefinition
                        Height="Auto"/>
                    <RowDefinition
                        Height="Auto"/>
                    <RowDefinition
                        Height="Auto"/>
                    <RowDefinition
                        Height="Auto"/>
                </Grid.RowDefinitions>

                <Image
                    Grid.Row="0"
                    Source="{Binding ImageUser5}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <ProgressBar
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Value="{Binding ProgressBarUser5}"
                    IsIndeterminate="False"
                    Foreground="CornflowerBlue"
                    Maximum="5"
                    Background="Transparent"
                    BorderThickness="1"
                    BorderBrush="DarkSlateGray"
                    HorizontalContentAlignment="Stretch"
                    Visibility="{Binding User5BehaviorVisibility}"/>

                <Grid
                    Grid.Row="2"
                    Visibility="{Binding User5BehaviorVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*"/>
                        <ColumnDefinition
                            Width="*"/>
                        <ColumnDefinition
                            Width="*"/>
                        <ColumnDefinition
                            Width="*"/>
                        <ColumnDefinition
                            Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Source="{Binding User5Star1}"
                        Height="32"/>
                    <Image
                        Grid.Column="1"
                        Source="{Binding User5Star2}"
                        Height="32"/>
                    <Image
                        Grid.Column="2"
                        Source="{Binding User5Star3}"
                        Height="32"/>
                    <Image
                        Grid.Column="3"
                        Source="{Binding User5Star4}"
                        Height="32"/>
                    <Image
                        Grid.Column="4"
                        Source="{Binding User5Star5}"
                        Height="32"/>
                </Grid>

                <Grid
                    Grid.Row="3"
                    Visibility="{Binding User5BehaviorVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*"/>
                        <ColumnDefinition
                            Width="*"/>
                        <ColumnDefinition
                            Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Source="{Binding User5Strike1}"/>
                    <Image
                        Grid.Column="1"
                        Source="{Binding User5Strike2}"/>
                    <Image
                        Grid.Column="2"
                        Source="{Binding User5Strike3}"/>
                </Grid>

                <Grid
                    Grid.Row="4"
                    Margin="4"
                    Visibility="{Binding User5DayVisibility}">
                    <ProgressBar
                        Grid.Row="0"
                        Value="{Binding User5TasksCompletedDayProgressValue}"
                        IsIndeterminate="False"
                        Foreground="{Binding User5TasksCompletedDayProgressColor}"
                        Background="Transparent"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="1"/>
                    <TextBlock
                        Grid.Row="0"
                        Text="{Binding User5TasksCompletedDayProgressText}"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>

                <Grid
                    Grid.Row="5"
                    Margin="4"
                    Visibility="{Binding User5WeekVisibility}">
                    <ProgressBar
                        Grid.Row="0"
                        Value="{Binding User5TasksCompletedWeekProgressValue}"
                        IsIndeterminate="False"
                        Foreground="{Binding User5TasksCompletedWeekProgressColor}"
                        Background="Transparent"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="1"/>
                    <TextBlock
                        Grid.Row="0"
                        Text="{Binding User5TasksCompletedWeekProgressText}"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>

                <Grid
                    Grid.Row="6"
                    Margin="4"
                    Visibility="{Binding User5MonthVisibility}">
                    <ProgressBar
                        Grid.Row="0"
                        Value="{Binding User5TasksCompletedMonthProgressValue}"
                        IsIndeterminate="False"
                        Foreground="{Binding User5TasksCompletedMonthProgressColor}"
                        Background="Transparent"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="1"/>
                    <TextBlock
                        Grid.Row="0"
                        Text="{Binding User5TasksCompletedMonthProgressText}"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>

                <Grid
                    Grid.Row="7"
                    Margin="4"
                    Visibility="{Binding User5QuarterVisibility}">
                    <ProgressBar
                        Grid.Row="0"
                        Value="{Binding User5TasksCompletedQuarterProgressValue}"
                        IsIndeterminate="False"
                        Foreground="{Binding User5TasksCompletedQuarterProgressColor}"
                        Background="Transparent"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="1"/>
                    <TextBlock
                        Grid.Row="0"
                        Text="{Binding User5TasksCompletedQuarterProgressText}"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Button>
    </Grid>
</Page>