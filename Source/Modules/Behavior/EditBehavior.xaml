<Window x:Class="HomeControl.Source.Modules.Behavior.EditBehavior" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Title="Edit Behavior" Height="800" Width="1200" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="DarkSlateGray">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Focusable="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Text="{Binding ChildName}" FontSize="32" Foreground="White" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Focusable="False"/>

        <Button Grid.Row="1" Grid.Column="0" Content="Remove Star" Command="{Binding ButtonCommand}" CommandParameter="removeStar" Margin="16"/>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="{Binding ChildStar1}" Height="48"/>
            <Image Grid.Column="1" Source="{Binding ChildStar2}" Height="48"/>
            <Image Grid.Column="2" Source="{Binding ChildStar3}" Height="48"/>
            <Image Grid.Column="3" Source="{Binding ChildStar4}" Height="48"/>
            <Image Grid.Column="4" Source="{Binding ChildStar5}" Height="48"/>
        </Grid>
        <Button Grid.Row="1" Grid.Column="2" Content="Add Star" Command="{Binding ButtonCommand}" CommandParameter="addStar" Margin="16"/>

        <Button Grid.Row="2" Grid.Column="0" Content="Remove Strike" Command="{Binding ButtonCommand}" CommandParameter="removeStrike" Margin="16"/>
        <Grid Grid.Row="2" Grid.Column="1" Margin="0 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="{Binding ChildStrike1}" Height="48"/>
            <Image Grid.Column="1" Source="{Binding ChildStrike2}" Height="48"/>
            <Image Grid.Column="2" Source="{Binding ChildStrike3}" Height="48"/>
        </Grid>
        <Button Grid.Row="2" Grid.Column="2" Content="Add Strike" Command="{Binding ButtonCommand}" CommandParameter="addStrike" Margin="16"/>

        <Grid Grid.Row="3" Grid.Column="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="-25" Command="{Binding ButtonCommand}" Margin="0 0 4 0" CommandParameter="remove25"/>
            <Button Grid.Column="1" Content="-10" Command="{Binding ButtonCommand}" Margin="4 0" CommandParameter="remove10"/>
            <Button Grid.Column="2" Content="-1" Command="{Binding ButtonCommand}" Margin="4 0 0 0" CommandParameter="remove1"/>
        </Grid>

        <ProgressBar Grid.Column="1" Grid.Row="3" Margin="0 16" FontSize="16" HorizontalAlignment="Stretch" Value="{Binding ProgressBarChildValue}" IsIndeterminate="False"
                     Foreground="CornflowerBlue" Background="Transparent" BorderThickness="1" HorizontalContentAlignment="Stretch"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding ProgressBarChildValue}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"
                   Foreground="GreenYellow" Focusable="False"/>


        <Grid Grid.Row="3" Grid.Column="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="+1" Command="{Binding ButtonCommand}" Margin="0 0 4 0" CommandParameter="add1"/>
            <Button Grid.Column="1" Content="+10" Command="{Binding ButtonCommand}" Margin="4 0" CommandParameter="add10"/>
            <Button Grid.Column="2" Content="+25" Command="{Binding ButtonCommand}" Margin="4 0 0 0" CommandParameter="add25"/>
        </Grid>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="{Binding RewardText}" Margin="16" VerticalAlignment="Stretch" Command="{Binding ButtonCommand}"
                CommandParameter="reward"/>

        <Button Grid.Row="5" Grid.Column="2" Content="Exit" FontSize="24" Foreground="White" Background="Transparent" Padding="4" HorizontalAlignment="Right"
                VerticalAlignment="Bottom" MinWidth="128" IsCancel="True" Margin="8" VerticalContentAlignment="Stretch"/>
    </Grid>
</Window>