                <TextBlock Text="Task Name:" FontSize="18" Foreground="White"/>
                <TextBox Text="{Binding TaskName, UpdateSourceTrigger=PropertyChanged}" FontSize="18" MaxLength="64"/>
                <TextBlock Text="Image:" FontSize="18" Foreground="White" Margin="0 8 0 0"/>
                <ComboBox ItemsSource="{Binding ImageList}" SelectedItem="{Binding ImageSelected}" FontSize="18"/>
                <TextBlock Text="Room:" FontSize="18" Foreground="White" Margin="0 8 0 0"/>
                <ComboBox ItemsSource="{Binding RoomList}" SelectedItem="{Binding RoomSelected}" SelectedIndex="{Binding RoomSelectedIndex}" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
