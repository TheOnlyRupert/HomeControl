                        <TextBlock Text="{Binding CurrentDateText}" HorizontalAlignment="Center" FontSize="24" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CurrentTimeText}" FontSize="48" Foreground="White"/>
                            <TextBlock Text="{Binding CurrentTimeSecondsText}" FontSize="24" Foreground="Gray" VerticalAlignment="Center" Margin="2"/>
                        </StackPanel>
                    </StackPanel>

                    <Frame Grid.Row="2" Source="../MusicPlayer.xaml" Focusable="False"/>
                </Grid>

                <Frame Grid.Column="1" Source="../Hvac.xaml" Focusable="False"/>

                <Grid Grid.Column="2">
