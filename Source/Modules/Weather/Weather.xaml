                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Column="1" Grid.Row="0" gif:ImageBehavior.AnimatedSource="{Binding ThermometerDisplayIcon}" VerticalAlignment="Top" HorizontalAlignment="Right"
                               Height="32"/>

                        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding CurrentWeatherLocationText}" FontSize="24" HorizontalAlignment="Center"
                                   Foreground="White" Margin="8 0 0 0"/>

                        <Image Grid.Column="0" Grid.Row="1" gif:ImageBehavior.AnimatedSource="{Binding CurrentWeatherCloudIcon}" Margin="-32"/>

                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding CurrentWeatherTempText}" FontSize="60" HorizontalAlignment="Left" Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding CurrentWeatherDescription}" HorizontalAlignment="Center" FontSize="16"
                                   TextWrapping="Wrap" Foreground="White" VerticalAlignment="Bottom"/>

                        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" MinWidth="256" MinHeight="64" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Command="{Binding 
                        ButtonCommand}" CommandParameter="debug">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center">
