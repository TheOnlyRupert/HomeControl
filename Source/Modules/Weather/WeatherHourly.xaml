      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="1" Margin="4">
        <Grid Margin="8 4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding HourlyForecastTime1}" FontSize="16" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Image Grid.Column="1" Grid.Row="0" Source="{Binding HourlyForecastWeatherIcon1}" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding HourlyForecastTemp1}" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Horizontal">
                <Image Source="{Binding HourlyForecastRainIcon1}" Height="16" VerticalAlignment="Center" Margin="0 0 4 0"/>
                <TextBlock Text="{Binding HourlyForecastRainChance1}" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Grid.Column="4" Grid.Row="0" Text="{Binding HourlyForecastWindSpeed1}" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
            <Image Grid.Column="5" Grid.Row="0" Source="../../../Resources/Images/weather/wind_direction.png" Height="48" VerticalAlignment="Center"
                   RenderTransformOrigin="0.5, 0.5" HorizontalAlignment="Left">
                <Image.RenderTransform>
                    <RotateTransform Angle="{Binding HourlyForecastWindDirectionRotation1}"/>
                </Image.RenderTransform>
            </Image>

