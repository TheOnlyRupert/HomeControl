                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <Image Source="../../../Resources/Images/icons/nhie.png" Width="48" Height="48"/>
        </Button>

        <Button Grid.Column="5" Command="{Binding ButtonCommand}" CommandParameter="trafficLight" HorizontalContentAlignment="Stretch" Margin="4">
