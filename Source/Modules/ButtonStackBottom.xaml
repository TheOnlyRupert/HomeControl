                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <Image Source="../../../Resources/Images/icons/pictionary.png" Width="48" Height="48"/>
        </Button>

        <Button Grid.Column="4" Command="{Binding ButtonCommand}" CommandParameter="nhie" HorizontalContentAlignment="Stretch" Margin="4">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
